global:
  scrape_interval: 10s

scrape_configs:
  - job_name: 'prometheus'
    scrape_interval: 5s
    static_configs:
      - targets: ['localhost:{{ prom_port }}']

  - job_name: 'node_exporter'
    scrape_interval: 5s
    static_configs:
      - targets: ['{{ 'node-exporter' if iri_net_name is defined else '127.0.0.1' }}:{{ exporter_port }}']
{% if hornet_prometheus_address is defined and hornet_prometheus_port is defined %}
  - job_name: 'hornet_exporter'
    scrape_interval: 5s
    static_configs:
      - targets: ['{{ hornet_prometheus_address }}:{{ hornet_prometheus_port }}']
{% endif %}
{% if goshimmer_prometheus_exporter_internal_address is defined and goshimmer_prometheus_exporter_port is defined %}
  - job_name: 'goshimmer_exporter'
    scrape_interval: 5s
    static_configs:
      - targets: ['{{ goshimmer_prometheus_exporter_internal_address }}:{{ goshimmer_prometheus_exporter_port }}']
{% endif %}
  - job_name: 'cadvisor'
    scrape_interval: 5s
    static_configs:
      - targets: ['{{ 'cadvisor' if iri_net_name is defined else '127.0.0.1' }}:{{ cadvisor_port }}']
{% if haproxy_stats_port is defined %}
  - job_name: 'haproxy_exporter'
    scrape_interval: 10s
    scheme: https
    tls_config:
      insecure_skip_verify: true
    static_configs:
      - targets: ['localhost:{{ haproxy_stats_port }}']
{% endif %}
alerting:
  alertmanagers:
    - scheme: http
      static_configs:
      - targets:
        - "{{ 'alertmanager' if iri_net_name is defined else '127.0.0.1' }}:{{ alertmanager_port }}"

rule_files:
  - "{{ prom_configdir }}/alert.rules.yml"
